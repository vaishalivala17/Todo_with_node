<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Todo</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<div class="container mt-4">

    <h2 class="title-glow mb-4">All Todos</h2>

    <a href="/addTodo" class="btn btn-primary mb-3">+ Add New Todo</a>

    <% if (todos.length === 0) { %>
        <h4>No todos found.</h4>
    <% } else { %>

    <table class="table table-bordered table-dark table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Task</th>
                <th>Priority</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <% todos.forEach((todo, index) => { %>
            <tr>
                <td><%= todo.name %></td>
                <td><%= todo.description %></td>
                <td><%= todo.task %></td>
                <td><%= todo.priority %></td>

                <td>
                    <a class="btn btn-sm btn-warning" href="/edit/<%= index %>">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/delete/<%= index %>">Delete</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>

    <% } %>

    <a href="/" class="d-block mt-3">Back Home</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
